<form class="{{cssClass}}" autocomplete="off">

  <nav class="sheet-tabs tabs" data-group="primary">
    {{#if (hasCustomTab data.type)}}
      <a class="item" data-tab="dt-{{data.type}}">{{localize (concat2 "SRAE.DOCUMENT_TYPES." (keycap data.type))}}</a>
    {{/if}}
    <a class="item" data-tab="tests">{{localize "SRAE.SHEETS.TABS.TESTS"}}</a>
    <a class="item" data-tab="stats">{{localize "SRAE.SHEETS.TABS.STATS"}}</a>
    <a class="item" data-tab="notes">{{localize "SRAE.SHEETS.TABS.NOTES"}}</a>
  </nav>

  <section class="sheet-body">
    {{#if (hasCustomTab data.type)}}
      {{> (concat2 "systems/srae/templates/sheets/tabs/item-type-partials/" data.type ".hbs")}}
    {{/if}}
    {{> "systems/srae/templates/sheets/tabs/tests-tab.hbs"}}
    {{> "systems/srae/templates/sheets/tabs/item-stats-tab.hbs"}}
    {{> "systems/srae/templates/sheets/tabs/notes-tab.hbs"}}
  </section>

</form>